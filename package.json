{
  "name": "website-evidence-collector",
  "version": "2.1.1",
  "description": "automation of website evidence collection for storage and transfer of personal data based on puppeteer",
  "homepage": "https://edps.europa.eu/press-publications/edps-inspection-software_en",
  "repository": {
    "type": "git",
    "url": "https://github.com/EU-EDPS/website-evidence-collector.git"
  },
  "type": "module",
  "engines": {
    "node": ">=20.0"
  },
  "scripts": {
    "build": "npm run clean && npm run build-frontend && npm run build-ts && npm run copy-assets",
    "clean": "rimraf build/ && rimraf frontend/dist/",
    "build-frontend": "cd frontend && npm ci && npm run build",
    "build-ts": "tsc -p .",
    "copy-assets": "copyfiles src/assets/*  package.json build/ && copyfiles --up 2 frontend/dist/* frontend/dist/assets/* build/static",
    "format": "prettier . --write",
    "start": "node build/bin/website-evidence-collector.js",
    "serve": "node build/bin/website-evidence-collector.js serve",
    "test": "jest --detectOpenHandles"
  },
  "bin": {
    "website-evidence-collector": "bin/website-evidence-collector.js"
  },
  "keywords": [
    "privacy",
    "tracking",
    "website",
    "data",
    "protection",
    "personal",
    "data",
    "GDPR",
    "puppeteer"
  ],
  "dependencies": {
    "@ghostery/adblocker-puppeteer": "^2.0.2",
    "body-parser": "^1.20.3",
    "content-security-policy-parser": "^0.6.0",
    "express": "^4.21.1",
    "fs-extra": "^11.2.0",
    "git-describe": "^4.1.1",
    "github-markdown-css": "^5.7.0",
    "got": "^14.4.3",
    "hpagent": "^1.2.0",
    "html-to-docx": "^1.8.0",
    "js-yaml": "^4.1.0",
    "js-yaml-js-types-esm": "^1.0.0",
    "jstransformer-marked": "1.4.0",
    "lodash": "^4.17.21",
    "marked-smartypants": "^1.1.8",
    "pug": "^3.0.3",
    "puppeteer": "^22.15.0",
    "puppeteer-har": "^1.1.2",
    "seedrandom": "^3.0.5",
    "serve-static": "^1.16.2",
    "stacktrace-js": "^2.0.2",
    "tmp": "^0.2.3",
    "tough-cookie": "^4.1.4",
    "winston": "^3.15.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/express": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/got": "^9.6.12",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.12",
    "@types/marked": "^5.0.2",
    "@types/node": "^22.8.1",
    "@types/pug": "^2.0.10",
    "@types/puppeteer-har": "^1.1.0",
    "@types/validator": "^13.12.2",
    "@types/yargs": "^17.0.33",
    "copyfiles": "  ^2.4.1",
    "jest": "^29.7.0",
    "prettier": "3.3.3",
    "rimraf": "^5.0.10",
    "ts-node": "^10.9.2",
    "ts-standard": "^12.0.2",
    "typescript": "^5.6.3"
  },
  "overrides": {
    "marked": "8.0.1",
    "puppeteer-har": {
      "chrome-har": "^0.13.1"
    }
  },
  "author": "Robert Riemann <robert.riemann@edps.europa.eu>",
  "license": "EUPL-1.2"
}
